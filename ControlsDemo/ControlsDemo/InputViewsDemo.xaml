<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.InputViewsDemo">
    <ContentPage.Content>
        <StackLayout>
            <CheckBox IsChecked="True" CheckedChanged="CheckBox_CheckedChanged" />

            <Slider
                x:Name="slider"
                Minimum="0"
                Maximum="10"
                MinimumTrackColor="Yellow"
                MaximumTrackColor="Green"
                ThumbColor="DarkRed"
                ValueChanged="Slider_ValueChanged"
            />
            <Label x:Name="lblSlider" Text="0" HorizontalTextAlignment="Center" />

            <Stepper
                x:Name="stepper"
                ValueChanged="Stepper_ValueChanged"
                Minimum="2"
                Maximum="10"
                Increment="2"
            />

            <Switch
                IsToggled="True"
                Toggled="Switch_Toggled"
                OnColor="LightGreen"
                ThumbColor="ForestGreen"
            />

            <DatePicker
                DateSelected="DatePicker_DateSelected"
                Format="dd-MM-yyyy"
            />

            <TimePicker
                Format="HH:mm"
                PropertyChanged="TimePicker_PropertyChanged"
            />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>